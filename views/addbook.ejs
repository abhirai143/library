  <style>
    /* CSS styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .navbar {
      background-color: #333;
      color: #fff;
      padding: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar h1 {
      margin: 0;
      font-size: 24px;
      font-weight: bold;
      color: #fff;
    }

    .navbar .search-form {
      margin-left: 20px;
    }

    .navbar input[type="text"] {
      padding: 8px;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      width: 200px;
    }

    .navbar input[type="text"]::placeholder {
      color: #aaa;
    }

    .navbar a {
      color: #fff;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 4px;
      background-color: #007bff;
    }

    .navbar a:hover {
      background-color: #0056b3;
    }
    .search-form {
  display: flex;
  align-items: center;
}

.search-form input[type="text"] {
  padding: 8px;
  border: none;
  border-radius: 4px 0 0 4px;
}

.search-form button {
  padding: 8px 12px;
  border: none;
  border-radius: 0 4px 4px 0;
  background-color: #4CAF50;
  color: #fff;
  cursor: pointer;
}

.search-form button:hover {
  background-color: #45a049;
}

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      color: #333;
      margin-top: 0;
    }

    form {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    .button {
      display: inline-block;
      padding: 8px 12px;
      background-color: #4CAF50;
      color: #fff;
      text-decoration: none;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 10px;
    }

    .button:hover {
      background-color: #45a049;
    }

    /* Off-canvas menu */
    .offcanvas {
      width: 250px;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      background-color: #333;
      color: #fff;
      padding: 20px;
      transition: transform 0.3s ease;
      transform: translateX(-100%);
    }

    .offcanvas.open {
      transform: translateX(0);
    }

    .offcanvas a {
      display: block;
      color: #fff;
      text-decoration: none;
      margin-bottom: 10px;
    }
    .actions {
      display: flex;
      gap: 5px;
    }

    .actions button {
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
.formname{
  margin-bottom: 10px;

}
    .actions button.delete {
      background-color: #f44336;
      color: #fff;
    }

    .actions button.update {
      background-color: #2196F3;
      color: #fff;
    }

    /* Responsive styles */
    @media screen and (max-width: 600px) {
      .container {
        padding: 10px;
      }
      
      .navbar {
        padding: 10px;
      }
      
      .button {
        display: block;
        width: 100%;
      }
      
      table {
        font-size: 12px;
      }
    }
  </style>
  <script>
    // JavaScript for off-canvas menu
    function toggleMenu() {
      var offcanvas = document.getElementById("offcanvas");
      offcanvas.classList.toggle("open");
    }
  </script>
</head>
<body>
    <div class="navbar">
        <h1>Add Books</h1>
        <a href="#" onclick="toggleMenu()">☰ Menu</a>
    </div>
      <!-- Off-canvas menu -->
      <div id="offcanvas" class="offcanvas">
        <a href="#" onclick="toggleMenu()">✕ Close</a>
        <a href="home">Home</a>
        <a href="books">Books</a>
        <a href="members">Members</a>
        <a href="#">Borrowed Books</a>
