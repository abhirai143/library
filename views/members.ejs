<!DOCTYPE html>
<html>
<head>
  <title>Library Management Portal - Members</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    /* CSS styles */

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
    }

    .navbar {
      background-color: #333;
      color: #fff;
      padding: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar h1 {
      margin: 0;
      font-size: 24px;
      font-weight: bold;
    }

    .navbar a {
      color: #fff;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 4px;
      background-color: #007bff;
    }

    .navbar a:hover {
      background-color: #0056b3;
    }

    .navbar .menu-icon {
      display: none;
      font-size: 24px;
      cursor: pointer;
    }

    .navbar .menu {
  display: flex;
  align-items: center;
  margin-left: 20px; /* Add left margin to the menu */
}

.navbar .menu-item {
  margin-left: 10px;
  margin-right: 10px; /* Add left and right margin to the menu items */
}

    .content {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 4px;
    }

    .member-list {
      list-style-type: none;
      padding: 0;
    }

    .member-list li {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
      border-bottom: 1px solid #eee;
      padding-bottom: 20px;
    }

    .member-list li:last-child {
      margin-bottom: 0;
      border-bottom: none;
      padding-bottom: 0;
    }

    .member-list li .profile-image {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      margin-right: 20px;
      object-fit: cover;
    }

    .member-list li.admin .profile-image {
      background-color: #007bff;
    }

    .member-list li.user .profile-image {
      background-color: #28a745;
    }

    .member-list li .info {
      flex-grow: 1;
    }

    .member-list li .info h3 {
      margin: 0;
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .member-list li .info p {
      margin: 0;
      color: #777;
      font-size: 16px;
    }

    .member-list li a {
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
    }

    .member-list li a:hover {
      text-decoration: underline;
    }

    .admin-actions {
      display: flex;
      align-items: center;
    }

    .admin-actions button {
      padding: 8px 12px;
      border-radius: 4px;
      background-color: #007bff;
      color: #fff;
      border: none;
      margin-right: 10px;
      cursor: pointer;
    }

    .admin-actions button:hover {
      background-color: #0056b3;
    }

    .remove-user-button {
      background-color: #dc3545;
    }

    .remove-user-button:hover {
      background-color: #c82333;
    }


    @media screen and (max-width: 600px) {
  /* Styles for mobile devices */
  .member-list li .member-image {
    width: 80px;
    height: 80px;
    margin-right: 10px;
  }

  .member-list li .info {
    text-align: center;
  }
}


/* --------------------------mediaquery------------ */
@media screen and (max-width: 768px) {
  .navbar .menu {
margin-left: 0; /* Reset left margin for the menu */
}

}

@media screen and (max-width: 480px) {

  .navbar .menu-item {
margin-left: 0;
margin-right: 0; /* Reset left and right margin for the menu items */
}

}
  </style>
</head>
<body>
  <!-- Navbar -->
  <div class="navbar">
    <h1>Library Management Portal - Home</h1>
    <div class="menu">
        <a class="menu-item" style="background: #333;" href="/home">Home</a>
        <a class="menu-item" style="background: #333;" href="/books">Books</a>
        <a class="menu-item" style="background: #333;" href="/members">Members</a>
      <a class="menu-item" href="/logout">Logout</a>
    </div>
    <div class="menu-icon">&#9776;</div>
    </div>

  <!-- Content -->
  <div class="content">
    <h2>Members List</h2>
    <ul class="member-list">
      <li class="admin">
        <div class="profile-image"></div>
        <div class="info">
          <h3>Admin</h3>
          <p>Email: abhishekraibagi81@gmail.com</p>
          <p>Phone: +91 7349411199</p>
        </div>
        <div class="admin-actions">
          <a href="addbook"><button>Add Book</button></a>
          <a href="updatebook"><button>Update Book</button></a>
        </div>
      </li>

      <form action="/deleteUser" method="post">
      <% newUserList.forEach(function(item){ %>
        <li class="user">
        <div class="profile-image"></div>
        <div class="info">
          <h3><%=item.name%></h3>
          <p>Email: <%=item.email%></p>
          <p>Phone: <%=item.phone%></p>
        </div>
        <button type="button" class="remove-user-button">Remove User <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()"></button>
      </li>
      <%})%>
    </form>
    </ul>
  </div>
</body>
</html>
